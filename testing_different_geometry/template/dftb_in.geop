Geometry = GenFormat {
     <<< "pippopluto.struct"
}

# Driver = Ipi {
# 	Port=80002
#  	Host="192.168.101.1"
# 	isUnix = No
# 	Verbosity = 1
#    }

Driver = ConjugateGradient {
    MovedAtoms = {1:-1}
    MaxForceComponent = 1e-4
    MaxSteps = 2000
    OutputPrefix = "geo_end"
    AppendGeometries = No
    Constraints = {}
    LatticeOpt = No
    ConvergentForcesOnly = Yes
}

Hamiltonian = DFTB{
   ReadInitialCharges = No
   MaxSCCIterations = 100
   Charge = +1.0
   DampXH = Yes
   DampXHExponent = 4.0
   Eigensolver = RelativelyRobust{}
   HubbardDerivs = {
      H = -0.1857
      C = -0.1492
      S = -0.11
#      O = -0.1492
   }
   MaxAngularMomentum = {
      H = "s"
      C = "p"
      S = "d"
#      O = "p"
   }
   SCC = Yes
   SlaterKosterFiles = Type2FileNames{
      Prefix = /home/petragli/Codes/dftb-dev/SK-parameters/3ob-1-1/
      Separator = "-"
      Suffix = ".skf"
   }
   ThirdOrderFull = Yes
   Filling = Fermi{
	Temperature[K] = 300
	}
   Dispersion = LennardJones {
      Parameters = UFFParameters{}
   }
}
Options {
   WriteResultsTag = No
   WriteDetailedOut = No
}
